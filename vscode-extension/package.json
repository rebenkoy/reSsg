{
  "name": "ressg-helper",
  "displayName": "reSsg-helper",
  "description": "Provides support for reSsg static site generator",
  "version": "0.0.1",
  "repository": {"url": "https://github.com/rebenkoy/reSsg"},
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:/config.toml"
  ],
  "extensionDependencies": [
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ressg-helper.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reSsg",
          "title": "reSsg View",
          "icon": "media/reSsg-merged.svg"
        }
      ]
    },
    "views": {
      "reSsg": [
        {
          "id": "reSsg.general",
          "name": "General",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run clear && tsc -b ./back -b ./front",
    "watch": "tsc -watch -p ./back -p ./front",
    "clear": "rm -rf out",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "npm run compile && npx vsce package -o build-target/extension.vsix"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@types/vscode-webview": "^1.57.5",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "undici-types": "7.16.0",
    "@vscode/vsce": "3.7.1"
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^5.6.1",
    "simple-git": "^3.30.0"
  }
}
